# LDAP Gateway Server Configuration

# Authentication Backend
# Options: db, ldap, proxmox
AUTH_BACKEND=db

# Directory Backend  
# Options: db, proxmox
DIRECTORY_BACKEND=db

# LDAP Server Configuration
LDAP_COMMON_NAME=localhost
LDAP_BASE_DN=dc=localhost
LDAP_PORT=636

# SSL/TLS Certificate Configuration
# Option 1: Provide certificate content directly
# LDAP_CERT_CONTENT="-----BEGIN CERTIFICATE-----..."
# LDAP_KEY_CONTENT="-----BEGIN PRIVATE KEY-----..."

# Option 2: Provide paths to certificate files
# LDAP_CERT_PATH=/path/to/server.crt
# LDAP_KEY_PATH=/path/to/server.key

# Option 3: Disable SSL/TLS (not recommended for production)
# LDAP_UNENCRYPTED=false

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=webchart
DB_USER=webchart
DB_PASSWORD=your_password_here

# Database Configuration (MongoDB) - Alternative to MySQL
# MONGO_URI=mongodb://localhost:27017/webchart

# Proxmox Configuration (if using proxmox backend)
# PROXMOX_USER_CFG=/etc/pve/user.cfg
# PROXMOX_SHADOW_CFG=/etc/pve/shadow.cfg

# Notification Service (MFA)
ENABLE_NOTIFICATION=false

# Logging Level
# Options: error, warn, info, debug
LOG_LEVEL=info